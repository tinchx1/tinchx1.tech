---
const personalImageAlt = "Miguel √Ångel";
import Badge from "@/components/Badge.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import SocialPill from "@/components/SocialPill.astro";
import GitHub from "./icons/GitHub.astro";
import * as m from "../paraglide/messages.js";
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/tinchx1.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://linkedin.com/in/martin-marchionni-16104127a"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge> {m.hero_about_me_available} </Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    {m.hero_about_me_heading}
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-cyan-500 [&>strong]:text-cyan-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    {m.hero_about_me_description}
    <strong>{m.hero_about_me_description_strong1} </strong>
    {m.hero_about_me_description_end}<strong>
      {m.hero_about_me_specialization_strong}
    </strong>
    {m.hero_about_me_specialization_end}
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:workspacetinchx1@gmail.com">
      <MailIcon class="size-4" />
      {m.hero_contact_me}
    </SocialPill>
    <SocialPill href="https://linkedin.com/in/martin-marchionni-16104127a">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/tinchx1">
      <GitHub class="size-4" />
      GitHub
    </SocialPill>
  </nav>
</div>
